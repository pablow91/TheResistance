<?xml version="1.0" encoding="utf-8"?>
<eu.stosdev.theresistance.view.LobbyView xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/lobby_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:textSize="24sp"
            tools:text="Strategy Tip"/>

        <TextView
            android:id="@+id/lobby_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lobby_label"
            android:layout_marginTop="8dp"
            android:text="@string/tip_r4"
            android:textSize="16sp"/>
    </RelativeLayout>


</eu.stosdev.theresistance.view.LobbyView>